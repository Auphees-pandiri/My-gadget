<div class="container">
  <h1>My Gadgets</h1>
  <%= render 'items/lookup' %>
  <% if @items.size > 0 %>
    <table class="table table-striped table-hover table-responsive">
      <thead>
        <tr>
          <th colspan="3" class="page-header">
            <h2>My Subscribed Gadgets</h2>
          </th>
        </tr>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <td>
              <%= link_to "UnSubscribe gadget", user_item_path(item), method: :delete,
                data: { confirm: "Are you sure?" },:remote => true, :class => 'delete_item', class: "btn btn-xs btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    <table>  
  <% else %>
    <div class="row col-lg-12">
      <p class="lead">
        You don't have any items yet, please add some!
      </p>
    </div>
  <% end %>
</div>
<div class="container">
  <footer class="main-footer">
        <div class="container">
            <div class="row">
              <div class="col-md-6">
                <h3>About My Gadget</h3>
                <p>Our Gadgets are the top and most trusted ones across the globe.Our Gadgets are cost efficient and available at a reasonable price.Our Gadgets already have very good fame in the market.We also provide branded gadgets.</p>
                <p>Copyright &copy; 2019</p>
              </div>
              <div class="col-md-6">
                <br><br>
                  <ul class="list-unstyled">
                    <li><%= link_to "My Gadgets", my_portfolio_path %></li>
                    <li><%= link_to "My Friends", my_friends_path %></li>
                    <li><%= link_to "My Profile", user_path(current_user) %></li>
                  </ul>
              </div>
            </div>
        </div>
  </footer>
</div>